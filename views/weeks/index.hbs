<div id='site-wrapper'>
    <header>
        <div class='semicircle-top'>
            <p class='site-title'>pantry</p>
        </div>
    </header>
    <main>
        <h1> What Kind of Week Is It?</h1>
        <div id='weeks-grid'>
            {{#each week}}
            <div>
                <a href='/weeks/{{this._id}}'>
                    <img class='thumbnail' src='{{this.img}}' alt='{{this.name}}'>
                    <div>{{this.name}}</div>
                </a>

            </div>
            {{/each}}
        </div>
    </main>
    <footer>
        <a href='/weeks/new'>Add a Week!</a>
    </footer>
</div>